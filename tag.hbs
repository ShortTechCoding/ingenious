{{!< default}}
<main>
    {{#tag}}
    <header class="page-header category"
        style="background: linear-gradient(to top, rgba(0,0,0,0.8), rgba(0,0,0,0.4)), url({{feature_image}})  no-repeat center / cover, #111111">
        <div class="content container">
            <h1 class="headline">{{name}}</h1>
            {{#if description}}
            <aside class="description">
                {{description}}
            </aside>
            {{/if}}
        </div>
        <figure class="wave"></figure>
    </header>
    {{/tag}}

    <main class="container overlap-with-header">
        {{> "posts-list" posts=posts}}
    </main>
</main>