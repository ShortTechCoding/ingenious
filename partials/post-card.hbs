<article class="article {{post_class}}">
    <a href="{{url}}"><img class="thumbnail" src="{{feature_image}}" /></a>
    <div class="content">
        <span class="category">{{primary_tag.name}}</span>
        <h1 class="title">{{title}}</h1>
        <p class="text-preview">
            {{excerpt words="50"}}...
        </p>
    </div>
    <a href="{{url}}" class="button dark">Lesen</a>
</article>