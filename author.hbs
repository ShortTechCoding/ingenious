{{!< default}}
<main>
    {{#author}}
    <header class="page-header author"
        style="background: linear-gradient(to top, rgba(0,0,0,0.8), rgba(0,0,0,0.4)), url({{cover_image}})  no-repeat center / cover, #111111">
        <div class="content container-flo">
            <h1 class="headline">{{name}}</h1>
            {{#if bio}}
            <aside class="bio">
                {{bio}}
            </aside>
            {{/if}}
        </div>
        <figure class="wave"></figure>
    </header>
    {{/author}}

    <main class="post-list container-flo">
        {{> "posts-list" posts=posts}}
    </main>
</main>